@{
    ViewData["Title"] = "Submit Movies";
}
@model JoelMovies_JamesGoaslind.Models.Movie
<h1>@ViewData["Title"]</h1>

<!--This is where poeple enter the information-->
<form method="post">  

    <input type="hidden" asp-for="MovieId" /><br />

    <select asp-for="CategoryId">
        <option value="">Select Category</option>
        @foreach(Category c in ViewBag.Category)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span><br />
    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title"><br>
    <span asp-validation-for="Title" class="text-danger"></span><br />
    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year"><br>
    <span asp-validation-for="Year" class="text-danger"></span><br />
    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director"><br>
    <span asp-validation-for="Director" class="text-danger"></span><br />
    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating">
        <option value="">Select an option</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <span asp-validation-for="Rating" class="text-danger"></span><br />
    <label asp-for="Edited">Edited:</label><br>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />
    <label asp-for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo"><br><br />
    <label asp-for="CopiedToPlex">CopiedToPlex:</label><br>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />
    <label asp-for="Notes">Notes:</label><br>
    <input asp-for="Notes"><br><br>
    <input type="submit" value="Submit">
</form>